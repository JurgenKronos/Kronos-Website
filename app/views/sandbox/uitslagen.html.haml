.row
  .col-md-12
    %h2 Laatste wedstrijden
    #laatste.panel-group.list-group
      - (10).times do |ntime|
        .panel.list-group-item
          .list-group-heading
            %a{:class=>'accordion-toggle collapsed',  "data-parent" => "#laatste", "data-toggle" => "collapse", :href => "#laatste-collapse-"+ntime.to_s}
              .row
                .col-xs-1
                  %h4
                    = Faker::Date.forward(23).strftime('%d') 
                    = content_tag(:small, Faker::Date.forward(23).strftime('%a'))
                .col-xs-10
                  %h4
                    = Faker::Lorem.sentence 
                    = content_tag :small, ((Faker::Lorem.word) + " activiteit")
                .col-xs-1.text-right
                  %h4
                    %small
                      .icon
          .collapse{:id=>'laatste-collapse-'+ntime.to_s}
            .panel-body
              -(1+rand(5)).times do |rslt|
                .table-responsive
                  %table.table.table-condensed.table-striped
                    %thead
                      %tr
                        %th{:colspan=>'3'}
                          = Faker::Lorem.word
                    %tbody
                      - (1+rand(7)).times do |n_uit|
                        %tr
                          %th.row.col-xs-1
                            =(n_uit+1+rand(5)).to_s
                          %td.col-xs-5
                            = Faker::Name.name 
                          %td.col-xs-6
                            tijd
            .row
              .col-xs-12.text-center
                = link_to 'evenementenpagina','/agendaitem#uitslagen', :class=>'btn btn-primary'

.row
  .col-md-12
    %h2 Top tien per onderdeel
    #toptien.panel-group.list-group
      - (10).times do |ntime|
        .panel.list-group-item
          .list-group-heading
            %a{:class=>'accordion-toggle collapsed',  "data-parent" => "#toptien", "data-toggle" => "collapse", :href => "#toptien-collapse-"+ntime.to_s}
              .row
                .col-xs-11
                  %h4
                    = Faker::Lorem.sentence 
                .col-xs-1.text-right
                  %h4
                    %small
                      .icon
          .collapse{:id=>'toptien-collapse-'+ntime.to_s}
            .panel-body
              .table-responsive
                %table.table.table-condensed.table-striped
                  %thead
                    %tr
                      %th #
                      %th Naam
                      %th Eenheid
                      %th Datum
                      %th Wedstrijd
                  %tbody
                    - 10.times do |n_uit|
                      %tr
                        %th.row.col-xs-1
                          =(1+n_uit).to_s
                        %td.col-xs-3
                          = Faker::Name.name 
                        %td.col-xs-2
                          hoeveelheid
                        %td.col-xs-2
                          datum
                        %td.col-xs-5
                          = link_to Faker::Lorem.word,'/agendaitem'

