%header
  %div{:class => "navbar", "id" => "navbar-kronos",  :role => "navigation"}
    %div{:class => "navbar-header"}
      %button{:type => "button", :class => "navbar-toggle", :"data-toggle" => "collapse", :"data-target" => "#navbar-collapse-kronos"}
        %span{:class => "sr-only"}Toggle menu
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to image_tag("Logo_site.png"), root_path, :class => "kronos-logo"
    
    %div{:class => "collapse navbar-collapse", "id" => "navbar-collapse-kronos"}
      %ul{:class => "nav navbar-nav"}
        %li
          = link_to "Home", root_path
        %li.dropdown
          %a{ :href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
            Informatie
            %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Commissies", '/commissions'
        %li
          = link_to "Agenda", '/agendaitems'
        %li
          = link_to "Uitslagen", '/uitslagen'
        %li
          = link_to "Foto's", '/photoalbmus'
        %li
          = link_to "Kronometer", '/kronometers'
        %li
          = link_to "Chatbox", '/chatbox'
        - if 1
          %li.dropdown.login-menu
            %a{ :href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
              Log in
              %b.caret
              %ul.dropdown-menu
                .login-form
                  = form_tag '/users/login' do
                    .form-group
                      = text_field_tag 'user[email]', "", "placeholder" => "emailadres", class: 'form-control'
                    .form-group
                      = password_field_tag 'user[password]', "", "placeholder" => "wachtwoord",  class: 'form-control'
                    .form-group
                      = label_tag 'user[remember_me]', :class => "checkbox" do
                        = t :remember_me
                        = check_box_tag 'user[remember_me]'
                    .form-group
                      %button.btn.btn-primary=t :sign_in
                    .form-group
                      = link_to "Wachtwoord vergeten?", '/users/new_password'
        - else
          %li
            = link_to current_user.name.split[0] + "'s stek", current_user
          %li
            = link_to "Leden", users_path
          - if current_user && current_user.admin?
            %li
              = link_to "Beheer", admin_path
          %li
            = link_to "Log uit", destroy_user_session_path, :method => :delete