.row
  .col-md-12
    %h1 Nieuws
.row
  .col-md-8
    %section
      - 5.times do |ntime|
        %article
          %header
            .row
              .col-md-offset-3.col-md-9
                %h2
                  =link_to Faker::Lorem.sentence,'/newspage'
                %p= time_tag Faker::Time.backward(14)
          .row
            .col-md-3= image_tag 'http://lorempixel.com/150/150/?1', class: "img-responsive img-thumbnail"
            .col-md-9
              %p.text-justify= Faker::Lorem.paragraph(20)
  .col-md-4
    .panel.panel-primary
      .panel-heading Agenda
      .list-group
        - 10.times do |ntime|
          -# TODO: add date and add limit to sentence sise
          %a{:href=>'/agendaitem', :class=>'list-group-item'} 
            .row
              .col-xs-2
                %h5
                  = Faker::Date.forward(23).strftime('%d') 
                  = content_tag 'small', Faker::Date.forward(23).strftime('%b')
              .col-xs-8
                %h5
                  = Faker::Lorem.sentence
              .col-xs-2
                %h5
                  %small
                    - if (rand(101) > 60)
                      %h5 
                        %small
                          %span.glyphicon.glyphicon-user
                          = rand (20) + 1
